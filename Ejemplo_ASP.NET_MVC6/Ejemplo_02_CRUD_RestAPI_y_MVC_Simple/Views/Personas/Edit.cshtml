@model Ejemplo_02_CRUD_RestAPI_y_MVC_Simple.Models.PersonaModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Persona</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-antiforgery="true"  asp-action="Edit" asp-controller="Personas" asp-method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group p-2">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            
            <div class="form-group p-2">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <input type="submit" value="Confirmar Cambios" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
</div>

